<p class="text-xs">
  <a href="/">トップ</a> / <a href="/results">成果発表一覧</a> /
  <span>{{title}}</span>
</p>

<img
  class="mt-0"
  width="1200"
  height="600"
  src="{{ cover }}"
  alt="{{ title }}"
/>

<header class="flex gap-x-4 items-center">
  <img
    class="w-16 h-16 rounded overflow-hidden my-0"
    src="{{ icon }}"
    alt="{{ title }}"
  />
  <h1 class="my-0">{{title}}</h1>
</header>

<p class="text-sm">{{year}}年度{% conv_term_to_ja term %}に発表されました</p>

<!-- prettier-ignore -->
<section>
<h2>Repositories</h2>
<ul class="text-xs font-mono">
{% for repo in repositories %}
<li><a href="{{repo}}">{{repo}}</a></li>
{% endfor %}
</ul>
</section>
